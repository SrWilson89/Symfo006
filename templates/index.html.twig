{# templates/index.html.twig #}
{% extends 'base.html.twig' %}

{% block head %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
{% endblock %}

{% block content %}
    {% if app.user and app.user.super is defined %}
        {% if app.user.super == 0 or app.user.super == 1 %}
            {# Dashboard para Super Admin o Admin #}
            {% include 'partials/dashboard-widgets.html.twig' %}

            {# Tabla de tareas abiertas y hilo de tareas #}
            <div class="row">
                <!-- Tabla de tareas -->
                <div class="col-lg-8">
                    <section class="card">
                        <header class="card-header">
                            <h2 class="card-title">Tareas Abiertas</h2>
                        </header>
                        <div class="card-body">
                            <table class="table table-responsive-md mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Estado</th>
                                        <th>Título</th>
                                        <th>Usuario</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set openTasksExist = false %}
                                    {% for tarea in opentasks %}
                                        {% if tarea.fechafin is null %}
                                            {% set openTasksExist = true %}
                                            <tr>
                                                <td>{{ tarea.id|default('N/A') }}</td>
                                                <td>
                                                    {% if tarea.estado.nombre|default('') == 'activo' %}
                                                        <span class="badge bg-success">{{ tarea.estado.nombre|default('Activo') }}</span>
                                                    {% elseif tarea.estado.nombre|default('') == 'pendiente' %}
                                                        <span class="badge bg-warning text-dark">{{ tarea.estado.nombre|default('Pendiente') }}</span>
                                                    {% elseif tarea.estado.nombre|default('') == 'inactivo' %}
                                                        <span class="badge bg-primary">{{ tarea.estado.nombre|default('Inactivo') }}</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">{{ tarea.estado.nombre|default('Desconocido') }}</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ tarea.titulo|default('Sin título') }}</td>
                                                <td>{{ tarea.usuario.nombre|default('Sin usuario') }}</td>
                                                <td>
                                                    <a class="btn btn-primary" href="{{ path('app_edit_tarea', {'id': tarea.id|default(0)}) }}">Editar</a>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    {% if not openTasksExist %}
                                        <tr><td colspan="5">No hay tareas abiertas</td></tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
                <!-- Hilo de tareas -->
                <div class="col-lg-4">
                    <section class="card">
                        <header class="card-header">
                            <h2 class="card-title">Hilo Tareas</h2>
                        </header>
                        <div class="card-body">
                            <div class="timeline timeline-simple mt-3 mb-3">
                                <div class="tm-body" style="max-height: 300px; overflow-y: auto;">
                                    {% if hilos is not empty %}
                                        <ol class="tm-items">
                                            {% for hilo in hilos %}
                                                <li>
                                                    <div class="tm-box">
                                                        <p class="text-muted mb-0">
                                                            {{ hilo.usuario.nombre|default('Anónimo') }} - {{ hilo.fechaCreacion ? hilo.fechaCreacion|date('d/m/Y H:i') : 'N/A' }}
                                                        </p>
                                                        <p>{{ hilo.tarea.titulo|default('Sin tarea') }}</p>
                                                        <p>{{ hilo.notas|default('Sin notas') }}</p>
                                                    </div>
                                                </li>
                                            {% endfor %}
                                        </ol>
                                    {% else %}
                                        <p>No hay mensajes en el hilo para estas tareas.</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

        {% elseif app.user.super == 2 %}
            {# Dashboard para Usuario #}
            <div class="row">
                <!-- Tabla de tareas -->
                <div class="col-lg-8">
                    <section class="card">
                        <header class="card-header">
                            <h2 class="card-title">Tareas Abiertas</h2>
                        </header>
                        <div class="card-body">
                            <table class="table table-responsive-md mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Estado</th>
                                        <th>Título</th>
                                        <th>Usuario</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set openTasksExist = false %}
                                    {% for tarea in opentasks %}
                                        {% if tarea.fechafin is null %}
                                            {% set openTasksExist = true %}
                                            <tr>
                                                <td>{{ tarea.id|default('N/A') }}</td>
                                                <td>
                                                    {% if tarea.estado.nombre|default('') == 'activo' %}
                                                        <span class="badge bg-success">{{ tarea.estado.nombre|default('Activo') }}</span>
                                                    {% elseif tarea.estado.nombre|default('') == 'pendiente' %}
                                                        <span class="badge bg-warning text-dark">{{ tarea.estado.nombre|default('Pendiente') }}</span>
                                                    {% elseif tarea.estado.nombre|default('') == 'inactivo' %}
                                                        <span class="badge bg-primary">{{ tarea.estado.nombre|default('Inactivo') }}</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">{{ tarea.estado.nombre|default('Desconocido') }}</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ tarea.titulo|default('Sin título') }}</td>
                                                <td>{{ tarea.usuario.nombre|default('Sin usuario') }}</td>
                                                <td>
                                                    <a class="btn btn-primary" href="{{ path('app_edit_tarea', {'id': tarea.id|default(0)}) }}">Editar</a>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    {% if not openTasksExist %}
                                        <tr><td colspan="5">No hay tareas abiertas</td></tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </div>

        {% else %}
            <div class="alert alert-warning">Rol de usuario no válido. Por favor, inicia sesión nuevamente.</div>
        {% endif %}
    {% else %}
        <div class="alert alert-warning">Debes iniciar sesión para ver el dashboard.</div>
        <a href="{{ path('app_login') }}" class="btn btn-primary">Iniciar Sesión</a>
    {% endif %}
{% endblock %}

