{% extends 'base.html.twig' %}

{% block title %}Listado de Tareas{% endblock %}

{% block page_title %}Gestión de Tareas{% endblock %}

{% block breadcrumb_item %}Tareas{% endblock %}


{% block content %}
    <section class="card">
        <header class="card-header">
            <div class="card-actions">
                <a href="{{ path('app_add_tarea') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Nueva Tarea
                </a>
            </div>
            <h2 class="card-title">Listado de Tareas</h2>
        </header>
        <div class="card-body">
            
            {# Aquí sí usamos la variable 'tareas' que envía TareaController::listado() #}
            {% if tareas is empty %}
                <div class="alert alert-info">
                    No hay tareas registradas en el sistema.
                </div>
            {% else %}
                <table class="table table-bordered table-striped table-hover mb-0" id="datatable-default">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Estado</th>
                            <th>Usuario</th>
                            <th>Creación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for tarea in tareas %}
                            <tr>
                                <td>{{ tarea.id }}</td>
                                <td>{{ tarea.titulo | default('N/A') }}</td>
                                
                                <td>
                                    {% if tarea.estado %}
                                        <span class="badge badge-primary">{{ tarea.estado.nombre | capitalize }}</span>
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </td>
                                
                                <td>
                                    {% if tarea.usuario %}
                                        {{ tarea.usuario.nombre | default('N/A') }}
                                    {% else %}
                                        Sistema
                                    {% endif %}
                                </td>
                                
                                <td>{{ tarea.fechaCreacion ? tarea.fechaCreacion | date('d/m/Y H:i') : 'N/A' }}</td>
                                
                                <td class="actions">
                                    <a href="{{ path('app_edit_tarea', {'id': tarea.id}) }}" class="on-default edit-row" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="{{ path('app_delete_tarea', {'id': tarea.id}) }}" class="on-default remove-row text-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar la tarea ID: {{ tarea.id }}?');" title="Eliminar"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}

        </div>
    </section>
{% endblock %}