<footer class="footer">
    <div class="container-fluid">
        <a href="#" class="btn btn-link">Colapsar</a>
        <div class="row">
            <div class="col-md-6">
                <h5>Próximas Tareas</h5>
                {% if upcomingTasks is defined and upcomingTasks|length > 0 %}
                    {% for task in upcomingTasks %}
                        <p>{{ task.fecha|date('d/m/Y') }} - {{ task.nombre }}</p>
                    {% endfor %}
                {% else %}
                    <p>No hay tareas próximas</p>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h5>Equipo</h5>
                {% if teamMembers is defined and teamMembers|length > 0 %}
                    {% for member in teamMembers|slice(0, 4) %}
                        <p>{{ member.nombre }} {{ member.apellidos }} - {{ member.estado|default('Sin estado') }}</p>
                    {% endfor %}
                {% else %}
                    <p>No hay miembros disponibles</p>
                {% endif %}
            </div>
        </div>
    </div>
</footer>