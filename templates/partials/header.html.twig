<header class="{% if is_granted('IS_IMPERSONATOR') %}impersonation-mode{% endif %}" style="background-color: #ffffff; box-shadow: 0 1px 3px rgba(0,0,0,.08);">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            {# Toggle para la barra lateral (Se a침adi칩 'd-lg-none' para esconder en desktop, si aplica) #}
            <a class="sidebar-toggle d-lg-none" data-open="sidebar-left"><i class="fas fa-bars"></i></a>

            <a class="navbar-brand" href="#">{{ globals.nombre|default('Dashboard') }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {% if is_granted('IS_IMPERSONATOR') %}
                        {% set impersonatedName = ((app.user.nombre ?? '') ~ ' ' ~ (app.user.apellidos ?? ''))|trim %}
                        {% if impersonatedName is empty %}
                            {% set impersonatedName = app.user.email %}
                        {% endif %}
                        <li class="nav-item">
                            {# Estilo para la alerta de impersonaci칩n #}
                            <span class="nav-link badge bg-warning text-dark me-2">
                                Impersonando a {{ impersonatedName }}
                            </span>
                            <a href="{{ path('homepage', {'_switch_user': '_exit'}) }}" class="nav-link d-inline-block">
                                <i class="fas fa-undo-alt"></i> Volver a mi rol
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <span class="badge bg-primary">{{ pendingTasks|default(0) }}</span> Tareas
                        </a>
                        <ul class="dropdown-menu">
                            {% if pendingTasks|default(0) > 0 %}
                                <li><a class="dropdown-item" href="#">Ver todas</a></li>
                            {% else %}
                                <li><a class="dropdown-item" href="#">No hay alertas</a></li>
                            {% endif %}
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            {{ app.user.nombre }} {{ app.user.apellidos }}
                            <span>
                                {% if app.user.super == 0 %}SUPER
                                {% elseif app.user.super == 1 %}ADMIN
                                {% elseif app.user.super == 2 %}USUARIO
                                {% else %}DESCONOCIDO{% endif %}
                            </span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Mi Perfil</a></li> {# Cambiado de app_user_profile a # #}
                            {% if app.user.super == 1 %}
                                <li><a class="dropdown-item" href="#">Bloquear Pantalla</a></li> {# Cambiado de #}
                            {% endif %}
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar Sesi칩n</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>