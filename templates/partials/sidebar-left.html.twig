{# templates/partials/sidebar-left.html.twig #}
{% set current_path = app.request.attributes.get('_route') %}
{# Obtener el parámetro 'entity' para la lógica de listados #}
{% set current_entity = app.request.attributes.get('entity') %}

{# LÓGICA DEL ESTADO ACTIVO #}
{# Tareas: Activo si la ruta es 'app_list' con entity='tareas' o si empieza por 'app_tarea_' #}
{% set is_tareas_active = (current_path starts with 'app_tarea_') or (current_path == 'app_list' and current_entity == 'tareas') %}
{# Usuarios: Activo si la ruta es 'app_list' con entity='usuarios' o si empieza por 'app_usuario_' #}
{% set is_usuarios_active = (current_path starts with 'app_usuario_') or (current_path == 'app_list' and current_entity == 'usuarios') %}
{# Configuración (Padre): Activo si la ruta actual es 'app_profile' o 'app_config_notifications' #}
{% set is_config_parent_active = current_path == 'app_profile' or current_path == 'app_config_notifications' %}


<aside id="sidebar-left" class="sidebar-left">
    <div class="sidebar-header">
        <div class="sidebar-brand">
            <i class="fas fa-layer-group"></i>
            <span class="brand-text">Mi Aplicación</span>
        </div>
        <button class="sidebar-toggle d-none d-md-block" 
                data-toggle-class="sidebar-left-collapsed" 
                data-target="html" 
                data-fire-event="sidebar-left-toggle"
                aria-label="Toggle sidebar">
            <i class="fas fa-bars"></i>
        </button>
    </div>

    <div class="nano">
        <div class="nano-content">
            <nav id="menu" class="nav-main" role="navigation">
                <ul class="nav nav-main">
                    {# DASHBOARD / INICIO #}
                    <li class="nav-item {{ current_path == 'app_index' ? 'nav-active' : '' }}">
                        <a class="nav-link" href="{{ path('app_index') }}">
                            <span class="nav-icon">
                                <i class="fas fa-home" aria-hidden="true"></i>
                            </span>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>

                    {# GESTIÓN DE TAREAS #}
                    <li class="nav-item {{ is_tareas_active ? 'nav-active' : '' }}">
                        <a class="nav-link" href="{{ path('app_list', {'entity': 'tareas'}) }}">
                            <span class="nav-icon">
                                <i class="fas fa-tasks" aria-hidden="true"></i>
                            </span>
                            <span class="nav-text">Tareas</span>
                        </a>
                    </li>

                    {# GESTIÓN DE USUARIOS #}
                    {% if app.user.super == 0 or app.user.super == 1 %}
                        <li class="nav-item {{ is_usuarios_active ? 'nav-active' : '' }}">
                            <a class="nav-link" href="{{ path('app_list', {'entity': 'usuarios'}) }}">
                                <span class="nav-icon">
                                    <i class="fas fa-users" aria-hidden="true"></i>
                                </span>
                                <span class="nav-text">Usuarios</span>
                            </a>
                        </li>
                    {% endif %}

                    {# SECCIÓN CON SUBMENU: CONFIGURACIÓN (CORREGIDO) #}
                    <li class="nav-item nav-parent {{ is_config_parent_active ? 'nav-expanded nav-active' : '' }}">
                        {# AHORA SE NAVEGA DIRECTAMENTE A app_profile cuando se hace clic en el padre #}
                        <a class="nav-link" href="{{ path('app_profile') }}">
                            <span class="nav-icon">
                                <i class="fas fa-cog" aria-hidden="true"></i>
                            </span>
                            <span class="nav-text">Configuración</span>
                            <span class="nav-arrow">
                                <i class="fas fa-chevron-down"></i>
                            </span>
                        </a>
                        <ul class="nav nav-children">
                            {# Enlace Perfil (usa la ruta existente 'app_profile') #}
                            <li class="nav-item {{ current_path == 'app_profile' ? 'nav-active' : '' }}">
                                <a class="nav-link" href="{{ path('app_profile') }}">
                                    <span class="nav-text">Perfil</span>
                                </a>
                            </li>
                            {# Enlace Notificaciones (usa la nueva ruta 'app_config_notifications') #}
                            <li class="nav-item {{ current_path == 'app_config_notifications' ? 'nav-active' : '' }}">
                                <a class="nav-link" href="{{ path('app_config_notifications') }}">
                                    <span class="nav-text">Notificaciones</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>

            {# USER INFO FOOTER #}
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="user-details">
                        <span class="user-name">{{ app.user.username ?? 'Usuario' }}</span>
                        <span class="user-role">{{ app.user.super == 1 ? 'Admin' : 'Usuario' }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</aside>

{# Estilos CSS #}
<style>
/* Sidebar Principal */
.sidebar-left {
    background: linear-gradient(180deg, #2c3e50 0%, #1a252f 100%);
    width: 280px;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    z-index: 1000;
}

/* Header del Sidebar */
.sidebar-header {
    padding: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.sidebar-brand {
    display: flex;
    align-items: center;
    gap: 12px;
    color: #fff;
    font-size: 20px;
    font-weight: 600;
}

.sidebar-brand i {
    font-size: 24px;
    color: #3498db;
}

.sidebar-toggle {
    background: transparent;
    border: none;
    color: #adb5bd;
    font-size: 18px;
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    transition: all 0.3s ease;
}

.sidebar-toggle:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
}

/* Navegación */
.nav-main {
    padding: 20px 0;
}

.nav-item {
    margin: 4px 12px;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.nav-link {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    color: #b8c7ce !important;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
}

.nav-link:hover {
    background: rgba(52, 152, 219, 0.1);
    color: #3498db !important;
    transform: translateX(4px);
}

.nav-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12px;
    font-size: 18px;
}

.nav-text {
    flex: 1;
    font-size: 15px;
    font-weight: 500;
}

/* Item Activo */
.nav-active > .nav-link {
    background: linear-gradient(90deg, #3498db 0%, #2980b9 100%);
    color: #fff !important;
    box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
}

.nav-active > .nav-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: #fff;
    border-radius: 0 4px 4px 0;
}

/* Badge */
.nav-badge {
    background: #e74c3c;
    color: #fff;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 600;
    margin-left: 8px;
}

/* Submenu */
.nav-parent > .nav-link .nav-arrow {
    transition: transform 0.3s ease;
}

.nav-expanded > .nav-link .nav-arrow {
    transform: rotate(180deg);
}

.nav-children {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    padding-left: 36px;
}

.nav-expanded .nav-children {
    max-height: 500px;
}

.nav-children .nav-item {
    margin: 2px 0;
}

.nav-children .nav-link {
    padding: 8px 16px;
    font-size: 14px;
}

/* Footer del Sidebar */
.sidebar-footer {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(0, 0, 0, 0.2);
}

.user-info {
    display: flex;
    align-items: center;
    gap: 12px;
}

.user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 24px;
}

.user-details {
    display: flex;
    flex-direction: column;
}

.user-name {
    color: #fff;
    font-size: 14px;
    font-weight: 600;
}

.user-role {
    color: #adb5bd;
    font-size: 12px;
}

/* Sidebar Colapsado */
.sidebar-left-collapsed .sidebar-left {
    width: 70px;
}

.sidebar-left-collapsed .brand-text,
.sidebar-left-collapsed .nav-text,
.sidebar-left-collapsed .nav-badge,
.sidebar-left-collapsed .nav-arrow,
.sidebar-left-collapsed .user-details {
    display: none;
}

.sidebar-left-collapsed .nav-link {
    justify-content: center;
    padding: 12px;
}

.sidebar-left-collapsed .nav-icon {
    margin: 0;
}

.sidebar-left-collapsed .user-info {
    justify-content: center;
}

/* Responsive */
@media (max-width: 767px) {
    .sidebar-left {
        transform: translateX(-100%);
    }
    
    .sidebar-left.mobile-open {
        transform: translateX(0);
    }
}

/* Animaciones */
@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.nav-item {
    animation: slideIn 0.3s ease forwards;
}

.nav-item:nth-child(1) { animation-delay: 0.1s; }
.nav-item:nth-child(2) { animation-delay: 0.15s; }
.nav-item:nth-child(3) { animation-delay: 0.2s; }
.nav-item:nth-child(4) { animation-delay: 0.25s; }
</style>

{# Script para manejar el toggle de submenús y el sidebar #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle para submenús
    document.querySelectorAll('.nav-parent > .nav-link').forEach(link => {
        link.addEventListener('click', function(e) {
            const parent = this.closest('.nav-parent');
            
            // Si el enlace tiene data-toggle="collapse" (como antes) o si su href es solo '#',
            // prevenimos el comportamiento por defecto (navegación).
            // NOTA: Hemos quitado data-toggle="collapse" del enlace de Configuración para que navegue.
            if (this.getAttribute('href') === '#') {
                e.preventDefault();
            }
            
            // Toggle de la clase nav-expanded para expandir/colapsar el submenú
            // Esto se ejecuta sin importar si navegamos o no, pero el submenú solo
            // se mostrará si la página no cambia.
            parent.classList.toggle('nav-expanded');
        });
    });

    // Toggle móvil del sidebar
    const toggleBtn = document.querySelector('.sidebar-toggle');
    if (toggleBtn) {
        toggleBtn.addEventListener('click', function() {
            document.querySelector('.sidebar-left').classList.toggle('mobile-open');
        });
    }
});
</script>