{% extends 'base.html.twig' %}


{% block content %}
	{% include 'partials/alerts.html.twig' %}
		<div class="row">
			<div class="col">
				<section class="card">
						<div class="card-body">
								{{ form_start(form)}}
							<div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">ID:</label>
								<div class="col-lg-6">
									{{form_widget(form.id)}}
								</div>
							</div>
							<div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Nombre:</label>
								<div class="col-lg-3">
									{{form_widget(form.nombre)}}
								</div>
								<label class="col-lg-1 control-label text-lg-end pt-2">Apellidos:</label>
								<div class="col-lg-2">
									{{form_widget(form.apellidos)}}
								</div>
							</div>
							<div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Empresa:</label>
								<div class="col-lg-3">
									{{form_widget(form.cliente)}}
								</div>
							</div>
							<div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Nif:</label>
								<div class="col-lg-2">
									{{form_widget(form.nif)}}
								</div>
								<label class="col-lg-2 control-label text-lg-end pt-2">Telefono:</label>
								<div class="col-lg-2">
									{{form_widget(form.telefono)}}
								</div>
							</div>
                            <div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Fecha_Creacion:</label>
								<div class="col-lg-2">
									{{form_widget(form.FechaCreacion)}}
								</div>
								<label class="col-lg-2 control-label text-lg-end pt-2">Modificacion:</label>
								<div class="col-lg-2">
									{{form_widget(form.Modificacion)}}
								</div>
							</div>
							<div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Email:</label>
								<div class="col-lg-2">
									{{form_widget(form.email)}}
								</div>
								<label class="col-lg-2 control-label text-lg-end pt-2">Pass:</label>
								<div class="col-lg-2">
									{{form_widget(form.password)}}
								</div>
							</div>
                            <div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Super:</label>
								<div class="col-lg-2">
									{{form_widget(form.super)}}
								</div>
								<label class="col-lg-2 control-label text-lg-end pt-2">Activo:</label>
								<div class="col-lg-2">
									{{form_widget(form.activo)}}
								</div>
							</div>
                            <div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Notas:</label>
								<div class="col-lg-3">
									{{form_widget(form.notas)}}
								</div>
								<label class="col-lg-2 control-label text-lg-end pt-2">Imagen:</label>
								<div class="col-lg-2">
									{{form_widget(form.imagen)}}
								</div>
							</div>
							<div class="form-group row pb-4">
								<div class="col-lg-9">
									{{form_widget(form.save)}}
								</div>
							</div>
								{{form_widget(form)}}
							{{form_end(form)}}
						</div>
				</section>
			</div>
		</div>				
{% endblock %}

{% block vendor %}
		
{% endblock %}