{% extends 'base.html.twig' %}


{% block content %}
	{% include 'partials/alerts.html.twig' %}
		<div class="row">
			<div class="col">
				<section class="card">
						<div class="card-body">
								{{ form_start(form)}}
							<div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">ID:</label>
								<div class="col-lg-3">
									{{form_widget(form.id)}}
								</div>
							</div>
							<div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Direccion:</label>
								<div class="col-lg-3">
									{{form_widget(form.direccion)}}
								</div>
								<label class="col-lg-1 control-label text-lg-end pt-2">Tipo:</label>
								<div class="col-lg-2">
									{{form_widget(form.tipo)}}
								</div>
							</div>
                            <div class="form-group row pb-4">
								<label class="col-lg-3 control-label text-lg-end pt-2">Estado:</label>
								<div class="col-lg-2">
									{{form_widget(form.estado)}}
								</div>
                            </div>
							<div class="form-group row pb-4">
								<div class="col-lg-9">
									{{form_widget(form.save)}}
								</div>
							</div>
								{{form_widget(form)}}
							{{form_end(form)}}
						</div>
				</section>
			</div>
		</div>				
{% endblock %}

